<div class="loginContainer">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div>
      <div class="nameMartha loginText">Martha</div> 
      <div class="ampersand loginText">&</div> 
      <div class="nameDavid loginText">David</div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, html: {class: "form-horizontal"}, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :username, class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
          <%= f.text_field :username, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off" , class: 'form-control'  %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field checkbox-horzontal col-sm-offset-2 col-sm-10">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="actions form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= button_tag "Log in" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>